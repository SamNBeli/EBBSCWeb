@model IEnumerable<EBBSCweb.Models.Media>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Media Management";
}
<div class="container">
    <h1>Media Management</h1>

    <p>
        <a asp-controller="Media" asp-action="AddMedia">Ajouter Une Video</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        <a asp-controller="Media" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Media" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <section class="media">
        <div>
            <h2 class="titre-media">Prévisualisation</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var video in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow rounded">
                            <iframe height="250" src="https://www.youtube.com/embed/@video.Link" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            <div class="card-body bg-dark text-white">
                                <b>@video.Name</b>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </section>
</div>
