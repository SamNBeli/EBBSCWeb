@model IEnumerable<EBBSCweb.Models.Media>

@{
    ViewData["Title"] = "Home Page";
}

<div class="landing" style="background-image: url('images/bck1.png');">
    <section class="hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <div class="text">
                        <p class="titre">EBBSC</p>
                        <p class="sous-titre">Église Baptiste Bellevue Salem du Canada</p>
                        <p class="corps">“Seulement, Au point où nous sommes parvenus, marchons d'un même pas.”</p>
                        <p class="verset">Phil 3:16</p>
                    </div>
                    <div class="button">
                        <a class="btn" href="https://apps.apple.com/ca/app/rsi-radio-salem-international/id1625799517"><img src="~/images/as.png" width="200" alt="My image"></a>
                        <a class="btn" href="https://play.google.com/store/apps/details?id=com.doudley.android"><img src="~/images/ps.png" width="200" alt="My image"></a>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="p-2">
                        <div class="d-flex flex-column mb-3 align-items-center">
                            <img class="p-2 logo" src="~/images/logo2.jpeg" alt="Image">
                            <!--
                                <audio controls class="p-2 audio-bar">
                                <source src="http://live.mcrmedias.net:8050/salem.mp3" type="audio/mpeg">
                                Your browser does not support the audio element.
                                </audio>
                             -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="media">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var video in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow rounded">
                        <iframe height="250" src="https://www.youtube.com/embed/@video.Link" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        <div class="card-body bg-dark text-white">
                            <b>@video.Name</b>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="about">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-7">
                <h2 class="titre-section">À Propos De Nous</h2>
                <p>Bienvenue à [Nom de l'Église] ! Nous sommes une communauté chrétienne dynamique et passionnée, dédiée à partager l'amour de Dieu avec tous ceux qui nous entourent. Notre église est un lieu où vous pouvez vous sentir chez vous, peu importe où vous en êtes dans votre parcours spirituel. Nous croyons en l'importance de cultiver une relation personnelle avec Dieu et de grandir ensemble en tant que disciples de Jésus-Christ. Chez [Nom de l'Église], vous trouverez des enseignements bibliques pertinents, une adoration passionnée et une atmosphère chaleureuse où vous pouvez vous connecter avec d'autres croyants. Nous sommes une communauté ouverte, engagée à servir notre ville et à apporter un changement positif dans notre société. Rejoignez-nous alors que nous marchons ensemble dans la foi, l'espoir et l'amour, cherchant à impacter notre monde pour la gloire de Dieu.</p>
            </div>
            <div class="col-md-5">
                <div class="p-2">
                    <div class="d-flex flex-column mb-3 align-items-center">
                        <img class="p-2 logo" src="~/images/logo2.jpeg" alt="Image">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section classe="Gallery">
    <div class="container">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/im1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/im2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/im3.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>